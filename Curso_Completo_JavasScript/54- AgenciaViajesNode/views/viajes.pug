extends ./layout/index
block contenido
        h1(class="mt5 text-center" ) #{pagina}
        main.container.mt-5
            .row.proximos-viajes 
                //- llama el arr de nuestra DB en MySQL, each se entiende como foreachm h2, muestra el titulo de cada viaje 
                each  viaje in viajes
                    .col-md-6.col-lg4.mb-4 
                        .card 
                            img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
                            .card-body
                                h2= viaje.titulo
                                p   
                                    svg.icon.icon-tabler.icon-tabler-calendar-clock(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                        path(d='M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3')
                                        path(d='M16 3v4')
                                        path(d='M8 3v4')
                                        path(d='M4 11h10')
                                        path(d='M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                                        path(d='M18 16.5v1.5l.5 .5')

                                    |  #{viaje.fecha_ida} -  #{viaje.fecha_vuelta}
                                
                                p 

                                | #{viaje.disponibles} Disponibles

                            p= viaje.descripcion.substr(0,90) +'...'
                                //-   creamos el btn que nos muestra mas informacion
                            a(href=`viajes/${viaje.slug}`,class="btn btn-success btn-block") Mas Informaci√≥n
    


    



                            
    

